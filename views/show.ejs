<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My CRUD in NodeJS</title>
</head>

<body>

    <h2>Registros<h2>
    <table border="1">
        <thead>
            <tr>
                <td>Name</td>
                <td>Surname</td>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.surname %></td>
            </tr>
            <% }) %>
        </tbody>
        <button><a href="/">Back</a></button>
    </table>

</body>

</html>